@model IEnumerable<VinyLand.Models.User>

@{
    ViewBag.Title = "UserSignedUp";
    Layout = Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserFollowing</title>
</head>
<body>
    <div class="card border-0 shadow my-5">
        <div class="card-body p-5 ">
            @if (Model.Count() == 0)
            {
                <h4> You dont follow anyone</h4>
            }
            else
            {
                <table class="table table-striped table table-dark table-condensed voc_list ">

                    <thead>
                        <tr>
                            <th style="width:20%;">User Picture</th>
                            <th style="width:40%;">Email</th>
                            <th style="width:40%;"></th>


                        </tr>
                    </thead>




                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="listview">
                                <td style="padding:15px 0px 15px 0px; resize:50px;">
                                    <a href="xy" title="">
                                        <img class="img-responsive voc_list_preview_img" style="width:auto; padding-left:10px; " src=@Url.Content(item.Picture) width="50" height="50">
                                    </a>
                                </td>

                                <td>@item.Email</td>

                                <td> @Html.ActionLink("User Profile", "UserProfile", new { email = item.Email }, new { @class = "btn btn-primary" }) </td>

                            </tr>
                        }
                    </tbody>
                </table>
            }

        </div>
        </div>
</body>
</html>
